<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5548E5">

    <!-- Header con título y configuración -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tongi"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:tint="@android:color/white"
            android:contentDescription="Configuración" />
    </LinearLayout>

    <!-- Vista de cámara / imagen (PANTALLA COMPLETA) -->
    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomButtonsLayout">

        <!-- Vista previa de cámara -->
        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- ImageView para mostrar imagen capturada o de galería -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#424242"
            android:contentDescription="Vista previa de imagen" />

        <!-- Icono de galería cuando no hay imagen -->
        <ImageView
            android:id="@+id/iconGallery"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="#757575"
            android:alpha="0.4"
            android:contentDescription="Seleccionar imagen" />

        <!-- Overlay gradient para mejorar legibilidad de controles superiores -->
        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/gradient_top"
            android:layout_gravity="top" />

        <!-- Contenedor de selectores de idioma SOBRE LA CÁMARA -->
        <LinearLayout
            android:id="@+id/languageSelectorsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:layout_gravity="top"
            android:gravity="center_vertical">

            <!-- Spinner de idioma origen -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <Spinner
                    android:id="@+id/spinnerSourceLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:background="@android:color/white"
                    android:spinnerMode="dropdown" />
            </androidx.cardview.widget.CardView>

            <!-- Botón de intercambio -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <ImageButton
                    android:id="@+id/btnSwapLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="#5548E5"
                    android:contentDescription="Intercambiar idiomas" />
            </androidx.cardview.widget.CardView>

            <!-- Spinner de idioma destino -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <Spinner
                    android:id="@+id/spinnerTargetLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:background="@android:color/white"
                    android:spinnerMode="dropdown" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Botones flotantes sobre la cámara -->
        <!-- Botón de captura flotante -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="32dp"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="@android:color/white"
            app:backgroundTint="#5548E5"
            app:fabSize="normal"
            app:elevation="8dp"
            android:visibility="gone"
            android:contentDescription="Capturar foto" />

        <!-- Botón de galería flotante -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:tint="@android:color/white"
            app:backgroundTint="@android:color/white"
            app:fabSize="normal"
            app:elevation="8dp"
            android:contentDescription="Seleccionar de galería" />

        <!-- Botón de reintento -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="32dp"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="@android:color/white"
            app:backgroundTint="#5548E5"
            app:fabSize="mini"
            app:elevation="8dp"
            android:visibility="gone"
            android:contentDescription="Volver a cámara" />
    </FrameLayout>

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Botón de texto -->
        <LinearLayout
            android:id="@+id/btnTextMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#9E9E9E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto"
                android:textColor="#9E9E9E"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón de cámara -->
        <LinearLayout
            android:id="@+id/btnCameraMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="#5548E5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cámara"
                android:textColor="#5548E5"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón de audio -->
        <LinearLayout
            android:id="@+id/btnAudioMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:tint="#9E9E9E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textColor="#9E9E9E"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>